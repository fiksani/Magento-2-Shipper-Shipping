<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="shipping.tracking.popup">
            <arguments>
                <argument name="tracking_view_model" xsi:type="object">Fandi\Shipper\ViewModel\Tracking</argument>
            </arguments>
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Fandi_Shipper::tracking/popup.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
